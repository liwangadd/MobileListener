<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical" >
    <!-- 标题 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="2"
        >
        <TextView 
            android:id="@+id/appname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="听力小秘"
            android:textColor="#000000"
            android:textSize="50sp"
            android:layout_alignParentBottom="true"
            />
        <TextView 
            android:layout_above="@id/appname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="欢迎来到"
            android:textColor="#ffffff"
            android:textSize="15sp"
            />
    </RelativeLayout>
	<!-- 注册框 -->
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center" 
        android:layout_weight="5"
        >
        <!-- 学号 -->
        <LinearLayout 
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:gravity="center_horizontal"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学号:"
                android:textColor="#000000"
                android:layout_marginRight="5dp"
                />
            <EditText android:id="@+id/registerUser"
	        android:layout_width="200dp"
        	android:layout_height="wrap_content"
	        android:drawableBottom="@drawable/login_underline"
	        android:background="@null" 
	        android:singleLine="true" 
	        android:padding="5dp"
	        />
        </LinearLayout>
	    
	    <!-- 密码 -->
	    <LinearLayout 
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:gravity="center_horizontal"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码:"
                android:textColor="#000000"
                android:layout_marginRight="5dp"
                />
            <EditText android:id="@+id/registerPassword"
	        android:layout_width="200dp"
        	android:layout_height="wrap_content"
	        android:drawableBottom="@drawable/login_underline"
	        android:background="@null" 
	        android:singleLine="true" 
	        android:padding="5dp"
	        android:password="true"
	        />
        </LinearLayout>
	    <!-- 确认密码 -->
	    <LinearLayout 
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:gravity="center_horizontal"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认密码:"
                android:textColor="#000000"
                android:layout_marginRight="5dp"
                />
            <EditText android:id="@+id/registerPwdConfirm"
	        android:layout_width="175dp"
        	android:layout_height="wrap_content"
	        android:drawableBottom="@drawable/login_underline"
	        android:background="@null" 
	        android:singleLine="true" 
	        android:padding="5dp"
	        android:password="true"
	        />
        </LinearLayout>
        
	    
	    <RelativeLayout 
	        android:layout_width="250dp"
	        android:layout_height="wrap_content"
	        >
            <!-- 确认按钮 -->
	        <Button 
	            android:id="@+id/registerConfirm"
	            android:layout_width="100dp"
	            android:layout_height="40dp"
	            android:layout_alignParentLeft="true"
	            android:layout_marginTop="5dp"
	            android:background="@drawable/confirm"
	            
	            />
	        <!-- 取消按钮 -->
	        <Button 
	            android:id="@+id/registerCancle"
	            android:layout_width="100dp"
	            android:layout_height="40dp"
	            android:layout_alignParentRight="true"
	            android:layout_marginTop="5dp"
	            android:background="@drawable/cancel"
	            android:scaleType="fitXY"
	            />
	    </RelativeLayout>
	</LinearLayout>
</LinearLayout>
