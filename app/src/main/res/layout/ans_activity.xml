<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 顶部 界面 -->
    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/main_topbackground"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="登录/注册"
            android:textColor="#FFFFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/next_que"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:text="下一题"
            android:textColor="#fff" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFFFF">
        <!-- 少个暂停图片 -->
        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/selector_music_btn"
            android:padding="6dp"
            android:scaleType="fitXY"
            android:src="@drawable/main_bottomplay" />
    </RelativeLayout>

    <!-- 中部 界面 -->
    <RelativeLayout
        android:id="@+id/mid_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_layout"
        android:layout_below="@id/top_layout"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/que_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/flag_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/que_topic"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/right_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="A"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/que_ans_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:paddingBottom="14dp"
                android:paddingTop="14dp"
                android:layout_marginRight="40dp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/flag_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/flag_1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/right_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="B"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/que_ans_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:paddingBottom="14dp"
                android:paddingTop="14dp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/flag_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/flag_2">

            <ImageView
                android:id="@+id/right_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="C"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/que_ans_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:paddingBottom="14dp"
                android:paddingTop="14dp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/flag_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/flag_3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/right_4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="D"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/que_ans_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:paddingBottom="14dp"
                android:paddingTop="14dp"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/upload_ans"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#0288D1"
            android:layout_below="@id/flag_4"
            android:layout_margin="32dp"
            android:text="提交"
            android:textColor="#fff"
            android:textSize="20sp"/>

    </RelativeLayout>

</RelativeLayout>
